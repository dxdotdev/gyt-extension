{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["src/content.ts"]
    }
  ],
  "background": {
    "scripts": ["src/background.ts"]
  },
  "permissions": ["activeTab", "downloads"]
}
