{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120,
    "formatWithErrors": true,
    "ignore": ["./node_modules"]
  },
  "linter": {
    "rules": {
      "style": {
        "useNamingConvention": "error"
      },
      "nursery": {
        "useSortedClasses": {}
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
